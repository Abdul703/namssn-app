<AboutScreen>:

	MDBoxLayout:
		orientation: 'vertical'

		MDTopAppBar:
			title:'About'
			left_action_items:[['arrow-left',lambda x: app.move_back('home')]]
			elevation:10
			md_bg_color: 1/255, 50/255, 32/255, 1

		MDBoxLayout:
			spacing: 10
			padding: [dp(30)]
			orientation: 'vertical'
			md_bg_color:  79/255, 121/255, 66/255, 1

			ScrollView:
				effect_cls: 'ScrollEffect'
				MDGridLayout:
					cols: 1
					size_hint_y: None
					height: self.minimum_height
					radius: [dp(10)]
					md_bg_color: 240/255, 248/255, 1, 1
					padding: [dp(15)]
					spacing: dp(20)

					MDLabel:
						text: '[b]COE MINNA APP 1.1[/b]'
						halign: 'center'
						size_hint: 1, None
						size: self.texture_size
						markup: True

					AppAbout:
						id: one
					AppAbout:
						id: two
					AppAbout:
						id: three
					AppAbout:
						id: four
					AppAbout:
						id: five


<AppAbout@MDLabel>:
	font_size: '16sp'
	markup: True
	size_hint_y: None
	size: self.texture_size
	
