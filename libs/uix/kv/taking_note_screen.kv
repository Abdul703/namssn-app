<TakingNoteScreen>:
	
	MDBoxLayout:
		orientation:'vertical'
		MDTopAppBar:
			title:'Taking Notes Tips'
			left_action_items:[['arrow-left',lambda x: app.move_back('home')]]
			elevation:10
			md_bg_color: 1/255, 50/255, 32/255, 1
	
		ScrollView:
			MDGridLayout:
				id: note_ctn
				cols: 1
				spacing: dp(20)
				padding: [dp(20), dp(20)]
				size_hint_y: None
				height: self.minimum_height
				md_bg_color: 240/255, 248/255, 255/255, 1

				Paragraph:
					text: 'Here are 7 tips for taking notes in the class.'
